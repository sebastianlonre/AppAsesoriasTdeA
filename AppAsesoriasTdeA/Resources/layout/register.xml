<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minWidth="25px"
    android:minHeight="25px"
    android:background="#FEFFF7"

    android:gravity="center">


    <LinearLayout
        android:background="#FFFCE7"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="360.5dp"
        android:layout_height="450.5dp"
        android:id="@+id/absoluteLayout1"
        android:layout_marginLeft="0.0dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:text="Registro"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:id="@+id/textView1" />


        <EditText
            android:inputType="text"
            android:layout_width="303.0dp"
            android:layout_marginTop="50px"
            android:layout_height="wrap_content"
            android:hint="Nombre de usuario"
            android:gravity="center"
            android:id="@+id/txtUserRegister" />

        <EditText
            android:inputType="textEmailAddress"
            android:layout_width="303.0dp"
            android:layout_height="wrap_content"
            android:hint="Correo"
            android:gravity="center"
            android:id="@+id/txtUserEmail" />


        <EditText
            android:inputType="text"
            android:layout_width="303.0dp"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:hint="Elija una contraseña"
            android:id="@+id/txtUserPassReg" />

        <EditText
            android:inputType="text"
            android:layout_width="303.0dp"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:hint="Confirma tu contraseña"
            android:id="@+id/txtUserPassReConf" />
        <Button
            android:text="registrar"
            android:layout_width="140.5dp"
            android:layout_height="49.5dp"
            android:layout_marginTop="30px"
            android:id="@+id/btnRegisterNew" />

        <Button
            android:text="Ya tengo cuenta"
            android:layout_width="195.0dp"
            android:layout_marginTop="30px"
            android:layout_height="wrap_content"
            android:id="@+id/btnBackLogin" />


    </LinearLayout>

</LinearLayout>