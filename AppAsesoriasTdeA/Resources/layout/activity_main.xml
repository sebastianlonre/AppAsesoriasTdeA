<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minWidth="25px"
    android:minHeight="25px"
    android:background="#FEFFF7"

    android:gravity="center">


    <LinearLayout
        android:background="#FFFCE7"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="360.5dp"
        android:layout_height="261.5dp"
        android:id="@+id/absoluteLayout1"
        android:layout_marginLeft="0.0dp"
        android:gravity="center"
        android:orientation="vertical">

        <EditText
            android:inputType="text"
            android:layout_width="303.0dp"
            android:layout_height="wrap_content"
            android:hint="Usuario"
            android:id="@+id/txtUserLogin" />

        <EditText
            android:inputType="textPassword"
            android:layout_width="303.0dp"
            android:layout_height="wrap_content"
            android:hint="contraseña"
            android:id="@+id/txtUserPassword" />

        <LinearLayout
            android:orientation="horizontal"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="74.5dp">

            <Button
                android:text="Ingresar"
                android:layout_width="140.5dp"
                android:layout_height="49.5dp"
                android:layout_marginTop="30px"
                android:id="@+id/btnLogin"
                android:layout_marginLeft="34.0dp" />
            <Button
                android:text="Registrar"
                android:layout_width="144.5dp"
                android:layout_height="49.5dp"
                android:layout_marginTop="30px"
                android:id="@+id/btnRegister"
                android:layout_marginRight="0.0dp"
                android:layout_marginLeft="12.5dp" />

        </LinearLayout>

        <Button
            android:text="olvide mi contraseña"
            android:layout_width="195.0dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnForgetpassword" />


    </LinearLayout>

</LinearLayout>
