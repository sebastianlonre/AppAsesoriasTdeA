<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minWidth="25px"
    android:minHeight="25px"
    android:background="#FEFFF7"

    android:gravity="center">


    <LinearLayout
        android:background="#FFFCE7"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="360.5dp"
        android:layout_height="261.5dp"
        android:id="@+id/absoluteLayout1"
        android:layout_marginLeft="0.0dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:text="Recuperar contraseÃ±a"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:id="@+id/textView1" />

        <EditText
            android:inputType="textEmailAddress"
            android:layout_width="303.0dp"
            android:layout_marginTop="50px"
            android:layout_height="wrap_content"
            android:hint="Correo registrado"
            android:id="@+id/txtRecoveryEmail" />

            
        <Button
            android:layout_marginTop="20px"
            android:text="Enviar codigo"
            android:layout_width="195.0dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnSendRecoveryEmail" />
        <Button
            android:layout_marginTop="20px"
            android:text="Volver al inicio"
            android:layout_width="195.0dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnBackLogin" />


    </LinearLayout>

</LinearLayout>
